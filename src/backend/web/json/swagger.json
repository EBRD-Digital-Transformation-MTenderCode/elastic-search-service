{
    "swagger": "2.0",
    "info": {
        "description": "Примірник для розгортання нового сервісу",
        "version": "1.0.0",
        "title": "Код цього додатка використовується як база для створення оркемого мікросервісу."
    },
    "basePath": "/rest-api",
    "schemes": [
        "http"
    ],
    "paths": {
        "/v1":{
            "get":{
                "tags":[
                    "methods"
                ],
                "summary":"Get all methods (Получение всех methods)",
                "description":"Метод используется для получения всех существующих методов, а также каждого отдельного метода с их свойствами в сервисе MDM.",
                "produces":[
                    "application/json"
                ],
                "parameters":[
                    {
                        "in":"query",
                        "name":"url",
                        "type":"string",
                        "required":false,
                        "description":"При заполнении поля значением url отдельного метода получим инфо о свойствах этого метода (для получения url отдельного метода осуществляем метод Get/methods не заполняя данное поле)."
                    }
                ],
                "responses":{
                    "200":{
                        "description":"OK",
                        "schema":{
                            "$ref":"#/definitions/200Methods"
                        }
                    },
                    "422":{
                        "description":"Data Validation Failed.",
                        "schema":{
                            "$ref":"#/definitions/ErrorModel"
                        }
                    }
                }
            }
        },
        "/v1/examples": {
            "get": {
                "tags": [
                    "example"
                ],
                "summary": "Примірник запиту GET",
                "description": "Запит GET",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Вдале виведення тіла (Response Body)",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "string": {
                                    "type": "string",
                                    "example": "here"
                                },
                                "some status": {
                                    "type": "string",
                                    "example": "success"
                                },
                                "some data": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "d1261e4b-a0a5-4bdc-b58d-f1214290eebf"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "example"
                ],
                "summary": "Примірник запиту POST",
                "description": "Запит POST. Використовується для створення нового об'єкта або даних",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "name",
                        "in": "formData",
                        "type": "string",
                        "description": "Примірник поля для вводу. При необхідності скопіювати в потрібній кількості"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Вдале виведення",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "code": {
                                    "type": "integer",
                                    "example": "200"
                                },
                                "status": {
                                    "type": "string",
                                    "example": "success"
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "example": "Field name"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/examples/id/{id}": {
            "get": {
                "tags": [
                    "example"
                ],
                "summary": "Примірник запиту GET з параметром",
                "description": "Запит GET з параметром. Використовується для отримання певного об'єкта (зазвичай за його ідентифікатором)",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "string",
                        "description": "Примірник поля для заповнення параметра, що використовується у адресному рядку URN.",
                        "required": true
                    },
                    {
                        "in": "query",
                        "name": "name",
                        "type": "string",
                        "description": "Примірник поля для вводу, що сформує GET-параметр (..?name=value&..)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Вдале виведення",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "code": {
                                    "type": "integer",
                                    "example": "200"
                                },
                                "status": {
                                    "type": "string",
                                    "example": "success"
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "d1261e4b-a0a5-4bdc-b58d-f1214290eebf"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Name"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "tags": [
                    "example"
                ],
                "summary": "Примірник запиту PATCH з параметром",
                "description": "Запит PATCH з параметром. Використовується для модифікації/оновлення певного об'єкта (за його ідентифікатором)",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "string",
                        "description": "Примірник поля для заповнення параметра, що використовується у адресному рядку.",
                        "required": true
                    },
                    {
                        "in": "formData",
                        "name": "name",
                        "type": "string",
                        "description": "Примірник поля 'форми' для весення нових даних для параметра, який необхідно оновити."
                    },
                    {
                        "in": "formData",
                        "name": "new_name",
                        "type": "string",
                        "description": "Ще одне поле."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Вдале виведення",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "code": {
                                    "type": "integer",
                                    "example": "200"
                                },
                                "status": {
                                    "type": "string",
                                    "example": "success"
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "d1261e4b-a0a5-4bdc-b58d-f1214290eebf"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Name"
                                        },
                                        "new_name": {
                                            "type": "string",
                                            "example": "New Name"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "example"
                ],
                "summary": "Примірник запиту DELETE з параметром",
                "description": "Запит DELETE з параметром. Використовується для видалення певного об'єкта за його ідентифікатором або для позначки його таким, що видалили",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "string",
                        "description": "Примірник поля для заповнення параметра, що використовується у адресному рядку.",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Вдале виведення",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "code": {
                                    "type": "integer",
                                    "example": "200"
                                },
                                "status": {
                                    "type": "string",
                                    "example": "success"
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "d1261e4b-a0a5-4bdc-b58d-f1214290eebf"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Name"
                                        },
                                        "new_name": {
                                            "type": "string",
                                            "example": "New Name"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
